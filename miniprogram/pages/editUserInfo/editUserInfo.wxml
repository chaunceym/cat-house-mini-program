<!--miniprogram/pages/editUserInfo/editUserInfo.wxml-->

<view class="editUserInfo-container">
<view class="editUserInfo-title">
<text>编辑个人信息</text>
</view>
<view class="editUserInfo-list">
	<navigator url="/pages/template/editTemplate/editTemplate?type=avatar" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>修改头像</text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
  <navigator url="/pages/template/editTemplate/editTemplate?type=nickname" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>修改昵称</text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
	<navigator url="/pages/template/editTemplate/editTemplate?type=pets" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>修改宠物信息</text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
  <navigator url="/pages/template/editTemplate/editTemplate?type=signature" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>修改个性签名</text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
  <navigator url="/pages/template/editTemplate/editTemplate?type=location" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>共享位置</text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
	<navigator url="/pages/template/editTemplate/editTemplate?type=weixin" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>设置微信号  <text style="color:#999;font-size:12px;"></text></text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
  <navigator url="/pages/template/editTemplate/editTemplate?type=phone" open-type="navigate">
		<view class="editUserInfo-list-item">
			<text>设置手机号  <text style="color:#999;font-size:12px;">仅好友可见</text></text>
			<text class="iconfont icon-jinrujiantou"></text>
		</view>
	</navigator>
  
</view>

</view>